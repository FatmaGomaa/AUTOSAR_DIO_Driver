if (window.addEventListener) { // Mozilla, Netscape, Firefox    window.addEventListener('load', correctNavbar, false);} else if (window.attachEvent) { // IE    window.attachEvent('onload', correctNavbar);}function correctNavbar() {    $(".dropdown").each(function () {        if (!$(this).has("ul.dropdown-menu").length > 0) {            var href = $($(this).find("a")[0]).attr('href');            $($(this).find(".dropdown-toggle")[0]).addClass("disabled");            $($(this).find(".dropdown-toggle")[0]).attr('href', href);        }    });}/* --------------------------------------------- // Masonry for desktop --------------------------------------------- */$(document).ready(function () {    var $ajaxContainer = $('.ajax-scroll');    $ajaxContainer.infinitescroll({        navSelector: "ul.pagination",        nextSelector: "ul.pagination li.next > a",        itemSelector: ".ajax-scroll",        donetext: '',        loadingText: '',        loadingImg: ''    }, function (json, opts) {        if (opts.state.currPage == $('.numberofpages').text()) {            $('#btn-load-more').hide();        } else {            $('#btn-load-more').show();        }    });    $(window).unbind('.infscr');    $('#btn-load-more').click(function () {        $ajaxContainer.infinitescroll('retrieve');        return false;    });});